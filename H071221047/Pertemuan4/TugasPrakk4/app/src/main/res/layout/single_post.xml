<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:background="#F1D6F4"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/pp_barbie_charm"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:id="@+id/text_view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blair Willows"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/cardview_dark_background"
                        android:id="@+id/text_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="blairwillows"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/image_button_trash"
                android:background="@drawable/trash_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="delete"
                app:tint="@color/cardview_light_background" />
        </LinearLayout>

        <TextView
            android:textSize="12dp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/text_view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Barbie stars as Blair, a kind-hearted girl who is chosen to attend Princess Charm School. In this magical place, she makes new friends and discovers that there's a princess in every girl!"
            android:layout_below="@id/linear_layout1"
            android:fontFamily="sans-serif" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/text_view3"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/image_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/barbie_charm"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
