<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State focused -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="@android:color/holo_blue_light" /> <!-- Warna border saat fokus -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="2dp"
                        android:color="@android:color/black" /> <!-- Warna border default -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>